<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sayingsofthewise.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sayings of the Wise</name>
    <description>
        Sayings of the Wise: Proverbs app. The Sayings of the Wise application displays random verses from King Solomon's Book of Proverbs, allows for storage of your favorite verses and supports sharing verses through a third-party social network.
    </description>
    <author email="info@sayingsofthewise.com" href="http://sayingsofthewise.com">
        Doug Scamahorn
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="ios">
              <feature name="StatusBar">
                  <param name="ios-package" onload="true" value="CDVStatusBar" />
              </feature>
              <preference name="StatusBarOverlaysWebView" value="true" />
              <preference name="StatusBarStyle" value="default" />
